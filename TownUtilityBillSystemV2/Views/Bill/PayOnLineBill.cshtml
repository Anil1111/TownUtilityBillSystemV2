@model TownUtilityBillSystemV2.Models.BillModels.BillModel
@using TownUtilityBillSystemV2.Resources

@{
	ViewBag.Title = Localization.PayOnLineBill;
}

<div class="jumbotron">
	<h3 class="header-bold">@Localization.PayTheBillOnLine</h3>
	<div class="form-horizontal">
		<div class="form-group">
			<p class="control-label col-md-3 font-size-17px"><strong>@Localization.EnterBillNumber</strong></p>
			<div class="col-md-3">
				@Html.EditorFor(model => model.Bill.Number, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="col-md-3">
				<button href="" class="btn btn-primary btn-large btn-block" id="findBillButton">
					<span class=" glyphicon glyphicon-search"></span> @Localization.Find
				</button>
			</div>
		</div>
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<div id="customerData" style="visibility:hidden" class="col-md-10">  </div>
			<div id="payBillDiv" style="visibility:hidden" class="col-md-3">
				<button class="btn btn-primary btn-large btn-block" id="payBillButton">
					<span class=" glyphicon glyphicon-usd"></span> @Localization.PayTheBill
				</button>
			</div>
		</div>
	</div>
</div>

@Html.Partial("~/Views/Shared/_BackToPreviousPagePartial.cshtml")

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/appJsScripts/payOnLineBill.js"></script>
<script>
	//variables for payOnLineBill.js file
	var billData = '@Localization.BillData';
	var customer = '@Localization.Customer';
	var billPeriod = '@Localization.BillPeriod';
	var billSum = '@Localization.BillSum';
	var paidYes = '@Localization.Paid' + ': ' + '@Localization.Yes';
	var paidNo = '@Localization.Paid' + ': ' + '@Localization.No';
	var canNotPayWarning = '@Localization.YouCanNotPayThisBillAgain';
	var noBillIsFoundWarning = '@Localization.NoBillIsFoundWarning';
</script>
